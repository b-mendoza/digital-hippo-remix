    "@biomejs/biome": "1.4.1",
    "@remix-run/dev": "2.4.1",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "concurrently": "8.2.2",
    "prettier": "3.1.1",
    "prettier-plugin-packagejson": "2.4.8",
    "prettier-plugin-tailwindcss": "0.5.10",
